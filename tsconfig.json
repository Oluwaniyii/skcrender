{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    // "outDir": "",
    "baseUrl": ".",

    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    // "noEmitOnError": true,
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["./**/*"],
  "exclude": ["node_modules"]
}
